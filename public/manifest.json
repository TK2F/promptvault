{
    "manifest_version": 3,
    "name": "PromptVault",
    "description": "プロンプト管理ツール - 即検索・即再利用・即編集",
    "version": "1.5.0",
    "permissions": [
        "storage",
        "sidePanel"
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "PromptVault を開く"
    },
    "icons": {
        "16": "icons/icon16.svg",
        "48": "icons/icon48.svg",
        "128": "icons/icon128.svg"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}